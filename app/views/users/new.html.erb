<%= form_for @user, html: { onclick: "return UserAccess.get();", id: 'new_user' } do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.hidden_field :token %>
  </div>
  <div class="field">
    <%= hidden_field_tag :access_infos %>
  </div>
  <br/>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

